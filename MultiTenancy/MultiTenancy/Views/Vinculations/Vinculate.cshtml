@using MultiTenancy.Entities
@model VinculateUserViewModel

<h1>Vincular usuario</h1>
<h5>Vincular usuario a: @Model.EnterpriseName</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Vinculate">
    <input type="hidden" asp-for="EnterpriseId" />
    <input type="hidden" asp-for="EnterpriseName" />

    <div class="mb-3">
        <label asp-for="UserEmail" class="form-label"></label>
        <input type="text" asp-for="UserEmail" class="form-control"/>
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}