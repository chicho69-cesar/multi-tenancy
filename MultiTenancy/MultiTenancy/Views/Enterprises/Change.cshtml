@using MultiTenancy.Entities
@model List<Enterprise>

@{
    ViewData["Title"] = "Cambiar de empresa";
}

@if (Model.Count == 0) {
    <p>No hay empresas disponibles</p>
} else {
    <form asp-action="Change">
        <div class="list-group">
            @foreach (var enterprise in Model) {
                <button type="submit" asp-route-id="@enterprise.Id"
                class="list-group-item list-group-item-action">
                    @enterprise.Name
                </button>
            }
        </div>
    </form>
}